<h1>Resumes</h1>

<br />

<%= link_to "New Resume", new_resume_path %>
<br />
<br />

<table>
   <thead>
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead> 
   <tbody>
      <% @resumes.each do |resume| %>
         <tr>
            <td><%= resume.name %></td>
            <td><%= link_to "Download Resume", resume.attachment_url %></td>
            <td><%= button_to "Delete", resume, method: :delete, class: "btn", confirm: "Are you sure that you wish to delete {#resume.name}?" %></td>
         </tr>
      <% end %>
   </tbody>
</table>
